{% extends 'base.html.twig' %}

{% block title %}Gestion des GPIOs{% endblock %}

{% block body %}
    <h1>Gestion des GPIOs</h1>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>GPIO</th>
                <th>Lié au raspberry</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for output in outputs %}
            <tr>
                <th># {{ output.id }}</th>
                <td>{{ output.name }}</td>
                <td>{{ output.gpio }}</td>
                <td>{{ output.raspberryPi }}</td>
                <td>
                    <a href="{{ path('app_output_edit', {'id': output.id}) }}" class="btn btn-warning">
                        <i class="far fa-edit"></i>
                    </a>
                    <a href="{{ path('app_output_delete', {'id': output.id}) }}" class="btn btn-danger" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette sortie ?');">
                        <i class="fas fa-trash"></i>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun GPIO n'a été créé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_output_new') }}" class="btn btn-primary">Ajouter</a>
{% endblock %}